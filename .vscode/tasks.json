{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "code dark mode toggle",
      "type": "shell",
      "command": "patches/code_dark_mode_in_branch.sh",
      "args": [
        "${input:BRANCH_NAME}"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ],

  "inputs": [
    {
      "id": "BRANCH_NAME",
      "type": "promptString",
      "default": "dark-mode",
      "description": "Provide a feature branch name or leave blank to use default"
    }
  ]
}